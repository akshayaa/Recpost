
<% if @posts.any? %>
	<%= @posts.each do |post| %>
		<div class="row">
			<p><%= post.user.username %></p>
			<%= link_to post_path(id: post.id) do %>
				<p><%= post.title %></p>
			<% end %>
			<div class="row">
					<%= post.content %>
					<% if post.user == current_user %>
					<p><%= link_to "edit", edit_post_path(post) %> | <%= link_to "delete", post_path(post), method: 'delete' %></p>
					<% end %>
					<p><strong><%= time_ago_in_words post.created_at %> ago</strong></p>
			</div>
		</div>
	<% end %>
<% else %>
	<p>Not created any posts...</p>
<% end %>
