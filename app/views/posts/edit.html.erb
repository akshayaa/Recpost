<div class="row">
    <%= form_for :post, :url => { :action => "update" }, :html => { :method => 'patch' } do |f| %>

      <div class="form-group">
        <%= f.label :title, "Title" %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>

      <%= f.submit "Update", class: 'btn btn-success' %>
    <% end %>
</div>